{
	"name": "svelte-headings",
	"version": "0.1.3",
	"description": "Automatic heading level management for Svelte 5. Never worry about using the wrong heading level (h1, h2, etc.) in complex component hierarchies.",
	"type": "module",
	"author": {
		"name": "Daniel Tonon"
	},
	"repository": {
		"url": "git+https://github.com/Dan503/svelte-headings.git",
		"type": "git"
	},
	"homepage": "https://github.com/Dan503/svelte-headings#readme",
	"bugs": {
		"url": "https://github.com/Dan503/svelte-headings/issues"
	},
	"license": "Apache-2.0",
	"keywords": [
		"svelte",
		"svelte5",
		"sveltekit",
		"heading",
		"headings",
		"h1",
		"h2",
		"h3",
		"h4",
		"h5",
		"h6",
		"accessibility",
		"a11y",
		"aria",
		"seo",
		"semantic",
		"html",
		"components"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"!dist/test-components"
	],
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && pnpm run package",
		"build:site": "vite build",
		"preview": "vite preview",
		"package": "rm -rf dist && svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "pnpm run package",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.1",
		"@eslint/js": "^9.39.2",
		"@playwright/test": "^1.58.0",
		"@sveltejs/adapter-netlify": "^5.2.4",
		"@sveltejs/kit": "^2.50.1",
		"@sveltejs/package": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@types/node": "^22",
		"@vitest/browser-playwright": "^4.0.18",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.1.0",
		"playwright": "^1.58.0",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"publint": "^0.3.17",
		"svelte": "^5.48.2",
		"svelte-check": "^4.3.5",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.53.1",
		"vite": "^7.3.1",
		"vitest": "^4.0.18",
		"vitest-browser-svelte": "^2.0.2"
	}
}
